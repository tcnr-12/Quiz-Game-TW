<!--        </TableRow>-->

<!--        <TextView-->
<!--            android:id="@+id/now_time"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="1dp"-->

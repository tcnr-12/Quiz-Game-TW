<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turquoise_green"
    android:padding="@dimen/p010">

    <TextView
        android:id="@+id/q0303_t001"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p050"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/q0303_t001"
        android:textColor="@color/Orange"
        android:textSize="@dimen/sp24"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/q0303_t002"
        android:layout_width="@dimen/p100"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/q0303_t001"
        android:layout_alignBottom="@+id/q0303_t001"
        android:layout_marginStart="@dimen/p000"
        android:layout_marginBottom="@dimen/p000"
        android:gravity="center"
        android:text="@string/q0303_t002"
        android:textColor="@color/Yellow"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/q0303_t003"
        android:layout_width="@dimen/p100"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/q0303_t002"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/p000"
        android:layout_marginEnd="@dimen/p020"
        android:gravity="center|center_vertical"
        android:text="@string/q0303_t003"
        android:textColor="@color/Yellow"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/q0303_t004"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p250"
        android:layout_below="@+id/q0303_t003"
        android:layout_marginTop="@dimen/p020"
        android:background="@color/yellow_softness"
        android:text="@string/q0303_t004"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/q0303_b001"
        android:layout_width="@dimen/p150"
        android:layout_height="@dimen/p050"
        android:layout_below="@+id/q0303_pb001"
        android:layout_marginTop="@dimen/p020"
        android:background="@color/green_softness"
        android:text="@string/q0303_b001"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18" />

    <Button
        android:id="@+id/q0303_b002"
        android:layout_width="@dimen/p150"
        android:layout_height="@dimen/p050"
        android:layout_alignBottom="@+id/q0303_b001"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/p000"
        android:layout_marginBottom="@dimen/p000"
        android:background="@color/green_softness"
        android:text="@string/q0303_b002"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18" />

    <Button
        android:id="@+id/q0303_b003"
        android:layout_width="@dimen/p150"
        android:layout_height="@dimen/p050"
        android:layout_alignBottom="@+id/q0303_b004"
        android:layout_marginBottom="@dimen/p000"
        android:background="@color/green_softness"
        android:text="@string/q0303_b003"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18" />

    <Button
        android:id="@+id/q0303_b004"
        android:layout_width="@dimen/p150"
        android:layout_height="@dimen/p050"
        android:layout_alignTop="@+id/q0303_b002"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/p080"
        android:layout_marginEnd="@dimen/p000"
        android:background="@color/green_softness"
        android:text="@string/q0303_b004"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18" />

    <ProgressBar
        android:id="@+id/q0303_pb001"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p020"
        android:layout_below="@+id/q0303_t004"
        android:layout_marginTop="@dimen/p020"
        android:progressTint="@color/Red" />

    <ImageButton
        android:id="@+id/q0303_b005"
        android:layout_width="@dimen/p050"
        android:layout_height="@dimen/p050"
        android:layout_below="@+id/q0303_b004"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/p150"
        android:layout_marginTop="@dimen/p020"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:ignore="SpeakableTextPresentCheck" />
</RelativeLayout>
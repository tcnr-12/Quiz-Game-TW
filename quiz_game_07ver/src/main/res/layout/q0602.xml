<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/p010">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/test_background">

        <TextView
            android:id="@+id/q0602_t001"
            android:layout_width="@dimen/p120"
            android:layout_height="@dimen/p060"
            android:background="@color/second_title"
            android:gravity="center"
            android:text="@string/q0602_t001"
            android:textColor="@color/second_title_text"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <Spinner
            android:id="@+id/q0602_s001"
            style="@android:style/Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:entries="@array/q0602_a001"
            android:gravity="center"
            android:scrollbarStyle="outsideOverlay"
            android:spinnerMode="dialog"
            tools:ignore="TouchTargetSizeCheck" />

    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/q0602_t002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p010"
                android:background="@color/second_title"
                android:gravity="center"
                android:text="@string/q0602_t002"
                android:textColor="@color/second_title_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/q0602_e001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/test_background"
                android:hint="@string/q0602_e001"
                android:textColorHint="@color/Gray"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/q0602_t003"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p010"
                android:background="@color/second_title"
                android:gravity="center"
                android:text="@string/q0602_t003"
                android:textColor="@color/second_title_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/q0602_e002"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/test_background"
                android:hint="@string/q0602_e002"
                android:textColorHint="@color/Gray"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/q0602_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p010"
        android:background="@android:drawable/btn_default"
        android:text="@string/q0602_b001"
        android:textColor="@color/test_color"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>
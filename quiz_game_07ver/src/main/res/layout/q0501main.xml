<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/q0501_ll01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/p010">

    <LinearLayout
        android:id="@+id/q0501_ll02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p400"
        android:background="@color/Silver"
        android:orientation="vertical">

        <TextView
            android:id="@+id/q0501_t001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_sheen"
            android:text="@string/q0501_name"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/q0501_t002"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/yellow_softness"
            android:fadeScrollbars="false"
            android:maxLines="10"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="@string/q0501_descr"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp18"
            android:textStyle="normal"
            tools:ignore="TextContrastCheck" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/q0501_b001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_yellow"
                android:text="@string/q0501_b001"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/q0501_b002"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_yellow"
                android:text="@string/q0501_b002"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/q0501_b003"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_yellow"
                android:text="@string/q0501_b003"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <Button
            android:id="@+id/q0501_b004"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_yellow"
            android:text="@string/q0501_b004"
            android:textColor="@color/big_button_text"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/q0501_t003"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p000"
        android:background="@color/green_sheen"
        android:gravity="center"
        android:text="@string/q0501_loading"
        android:textColor="@color/yellow_softness"
        android:textSize="@dimen/sp18"
        tools:ignore="TextContrastCheck" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/laySwipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/p000"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/q0501_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/p005"
            android:layout_weight="1" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/q0501_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/q0501_ncount"
            android:textColor="@color/Maroon"
            android:textSize="@dimen/sp18" />

    </TableRow>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/p010">

        <LinearLayout
            android:id="@+id/q0100_lay01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p170"
            android:orientation="horizontal">

            <WebView
                android:id="@+id/q0100_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/q0100_status"
                android:layout_width="@dimen/p250"
                android:layout_height="match_parent"
                android:background="@color/test_background"
                android:maxLines="15"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="@color/second_title_text"
                android:textSize="@dimen/sp18"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/q0100_img001"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/p080"
                    android:background="@color/lightblue" />

                <TextView
                    android:id="@+id/q0100_t003"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lightblue"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/q0100_lay02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p150"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/q0100_t001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p010"
                android:background="@color/second_title"
                android:gravity="center"
                android:maxLines="15"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:text="@string/q0100_t001"
                android:textColor="@color/second_title_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/test_background"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:id="@+id/q0100_lay05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/test_background"
                    android:orientation="vertical"
                    android:padding="@dimen/p005"
                    android:textColor="@color/test_color"
                    android:textSize="18sp" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/q0100_lay03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p150"
            android:layout_marginTop="@dimen/p010"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/q0100_img002"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_game" />

            <ImageView
                android:id="@+id/q0100_img003"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_form" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/q0100_lay04"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p150"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/q0100_img004"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_book" />

            <ImageView
                android:id="@+id/q0100_img005"
                android:layout_width="@dimen/p190"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/img_map" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
    android:layout_height="match_parent"
    android:background="@color/turquoise_green"
    android:padding="@dimen/p010">

    <Button
        android:id="@+id/q0304_b001"
        android:layout_width="@dimen/p150"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/p100"
        android:layout_marginTop="20dp"
        android:background="@color/green_softness"
        android:text="@string/q0304_b001" />

    <Button
        android:id="@+id/q0304_b002"
        android:layout_width="@dimen/p150"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/q0101_lay01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Q0101">

    <ImageView
        android:id="@+id/q0101_img001"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/back_book1" />

    <LinearLayout
        android:id="@+id/q0101_lay02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/q0101_lay03"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_book2"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/q0101_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/p100"
        android:gravity="center"
        android:text="@string/q0101_t001"
        android:textColor="@color/snow"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>
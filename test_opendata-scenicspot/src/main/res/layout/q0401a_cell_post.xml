<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/big_button"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="@dimen/p005">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="@color/Gray"
            android:contentDescription="@string/q0401a_img"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/nopic1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/p005"
                android:text="@string/q0401a_name"
                android:textColor="@color/second_title_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/p020"
                android:textColor="@color/test_color"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="5"
            android:textColor="@color/second_title_text"
            android:textSize="14sp" />
    </TableRow>

    <TextView
        android:id="@+id/Content"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text="@string/q0401a_descr"
        android:visibility="gone" />

</LinearLayout>